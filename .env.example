# ============================================================================
# КОНФИГУРАЦИЯ BRITANNICA LABELS
# ============================================================================
#
# ВАЖНО: Скопируйте этот файл в .env и укажите свои значения!
# cp .env.example .env
#
# Файл .env НЕ должен попадать в git (уже в .gitignore)
# ============================================================================

# ============================================================================
# STORE HOUSE 5 (API для загрузки блюд)
# ============================================================================

# URL Store House 5 API
SH5_URL=http://10.0.0.141:9797/api/sh5exec

# Учётные данные Store House 5
SH5_USER=Admin
SH5_PASS=your_password_here

# Период синхронизации (часы)
SH5_SYNC_INTERVAL=24

# ============================================================================
# БАЗА ДАННЫХ
# ============================================================================

# Основная база данных сервиса
DATABASE_URL=sqlite:///./britannica.sqlite

# Мастер-база блюд (создаётся скриптом export_dishes_with_extras.py)
DISHES_DB_FILE=dishes_with_extras.sqlite

# ============================================================================
# ПРИНТЕР
# ============================================================================

# IP адрес принтера PC-365B
PRINTER_IP=192.168.1.10

# Порт TCP (обычно 9100)
PRINTER_PORT=9100

# Таймаут подключения (секунды)
PRINTER_TIMEOUT=5

# ============================================================================
# БЕЗОПАСНОСТЬ
# ============================================================================

# Секретный ключ для сессий (сгенерируйте свой!)
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_please_generate_new_one

# Время жизни сессии (часы)
SESSION_LIFETIME_HOURS=8

# ============================================================================
# СЕРВЕР
# ============================================================================

# Host для прослушивания
HOST=0.0.0.0

# Порт
PORT=8000

# Режим (development / production)
ENVIRONMENT=development

# ============================================================================
# ЛОГИРОВАНИЕ
# ============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Файл лога
LOG_FILE=/var/log/britannica-labels/app.log

# ============================================================================
# TIMEZONE
# ============================================================================

# Часовой пояс (GMT+2)
# Europe/Kaliningrad для Калининграда
# Europe/Kiev для Украины
TZ=Europe/Kaliningrad
TIMEZONE=Europe/Kaliningrad

# ============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ (для export_dishes_with_extras.py)
# ============================================================================

# Максимум параллельных запросов к Store House
MAX_CONCURRENT=300

# Таймаут запроса (секунды)
REQUEST_TIMEOUT=30

# Максимум попыток при ошибке
MAX_RETRIES=3

# ============================================================================
# ДОПОЛНИТЕЛЬНО
# ============================================================================

# Срок годности этикеток по умолчанию (часы)
DEFAULT_SHELF_LIFE_HOURS=6

# Размер бумаги по умолчанию (мм)
DEFAULT_PAPER_WIDTH=60
DEFAULT_PAPER_HEIGHT=60
DEFAULT_PAPER_GAP=2

# Архивация заказов старше N часов
ARCHIVE_ORDERS_HOURS=48
